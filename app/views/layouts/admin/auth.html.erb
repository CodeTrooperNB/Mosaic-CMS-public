<!DOCTYPE html>
<html>
<head>
  <title>Mosaic CMS - <%= yield(:title) || 'Authentication' %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>

  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

  <script>
      // Initialize theme before page render to prevent flash
      (function() {
          const savedTheme = localStorage.getItem('mosaic-theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

          if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
              document.documentElement.classList.add('dark');
          }
      })();
  </script>
</head>

<body class="min-h-screen bg-gradient-to-br from-background to-muted"
      data-controller="admin--auth-layout">
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <div class="mx-auto h-12 w-12 flex items-center justify-center">
        <%= mosaic_logo('mosaic-logo') %>
      </div>
      <h2 class="text-3xl font-bold tracking-tight text-foreground">MOSAIC</h2>
      <small class="text-xs text-muted-foreground">Content, perfectly pieced together</small>
      <h2 class="mt-6 text-2xl font-bold tracking-tight text-foreground">
        <%= yield(:page_title) || 'Mosaic CMS' %>
      </h2>
    </div>

    <!-- Flash Messages -->
    <div class="space-y-4">
      <% if notice %>
        <div class="rounded-lg bg-success/10 border border-success/20 p-4 transition-all duration-300"
             data-controller="admin--notification"
             data-admin--notification-type-value="success"
             data-admin--notification-timeout-value="5000">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-success" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium text-success"><%= notice %></p>
            </div>
            <div class="ml-4 flex-shrink-0">
              <button type="button"
                      data-action="click->admin--notification#close"
                      class="inline-flex text-success hover:text-success/80 focus:outline-none transition-colors">
                <span class="sr-only">Close</span>
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="rounded-lg bg-destructive/10 border border-destructive/20 p-4 transition-all duration-300"
             data-controller="admin--notification"
             data-admin--notification-type-value="error"
             data-admin--notification-timeout-value="7000">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-destructive" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <p class="text-sm font-medium text-destructive"><%= alert %></p>
            </div>
            <div class="ml-4 flex-shrink-0">
              <button type="button"
                      data-action="click->admin--notification#close"
                      class="inline-flex text-destructive hover:text-destructive/80 focus:outline-none transition-colors">
                <span class="sr-only">Close</span>
                <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Main Content -->
    <div class="bg-card border border-border shadow-sm rounded-lg">
      <div class="px-6 py-8 sm:px-8">
        <%= yield %>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center flex items-center justify-between">
      <p class="text-xs text-muted-foreground">
        &copy; <%= Date.current.year %> Mosaic CMS
      </p>

      <!-- Theme Toggle -->
      <button type="button"
              data-action="click->admin--auth-layout#toggleTheme"
              data-admin--auth-layout-target="themeToggle"
              aria-label="Switch theme"
              class="p-2 rounded-lg text-muted-foreground hover:text-foreground hover:bg-muted transition-colors">
        <svg class="h-4 w-4 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
          <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
        </svg>
        <svg class="h-4 w-4 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
</div>
</body>
</html>