<!DOCTYPE html>
<html class="h-full">
<head>
  <title>Mosaic CMS - <%= content_for?(:page_title) ? yield(:page_title) : "Dashboard" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  <%= tinymce_assets %>

  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

  <script>
      // Initialize theme before page render to prevent flash
      (function() {
          const savedTheme = localStorage.getItem('mosaic-theme');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

          if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
              document.documentElement.classList.add('dark');
          }
      })();
  </script>
</head>

<body class="h-full bg-gradient-to-br from-background to-muted"
      data-controller="admin--admin-layout">

<!-- Mobile sidebar overlay -->
<div class="lg:hidden fixed inset-0 z-50 hidden"
     data-admin--admin-layout-target="mobileOverlay"
     data-action="click->admin--admin-layout#closeMobileSidebar">
  <div class="fixed inset-0 bg-background/80 backdrop-blur-sm"></div>
</div>

<!-- Mobile sidebar -->
<div class="lg:hidden fixed inset-y-0 left-0 z-50 w-72 transform -translate-x-full transition-transform duration-300 ease-in-out"
     data-admin--admin-layout-target="mobileSidebar">
  <div class="flex h-full flex-col bg-sidebar border-r border-sidebar-border shadow-xl">
    <%= render partial: 'layouts/admin/shared/mobile_sidebar_content' %>
  </div>
</div>

<!-- Desktop sidebar -->
<div class="hidden lg:fixed lg:inset-y-0 lg:z-40 lg:flex lg:w-52 lg:flex-col">
  <div class="flex grow flex-col bg-sidebar border-r border-sidebar-border shadow-sm">
    <%= render partial: 'layouts/admin/shared/desktop_sidebar_content' %>
  </div>
</div>

<!-- Main content -->
<div class="lg:pl-52">
  <!-- Mobile header -->
  <div class="lg:hidden flex items-center justify-between h-16 px-4 border-b border-border bg-background">
    <button type="button"
            class="p-2 text-foreground hover:text-primary rounded-lg hover:bg-muted transition-colors"
            data-action="click->admin--admin-layout#toggleMobileSidebar">
      <span class="sr-only">Open sidebar</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
    <div class="flex items-center gap-2">
      <div class="h-6 w-6">
        <%= mosaic_logo("mosaic-logo", class: "h-6 w-6 text-primary") %>
      </div>
      <div class="font-semibold text-foreground">Mosaic CMS</div>
    </div>
    <div class="w-10"></div> <!-- Spacer for centering -->
  </div>

  <!-- Desktop top bar -->
  <div class="hidden lg:flex items-center justify-between h-16 px-6 border-b border-border bg-background shadow-sm">
    <div class="flex items-center">
      <h1 class="text-xl font-semibold text-foreground">
        <%= content_for?(:page_title) ? yield(:page_title) : "Dashboard" %>
      </h1>
    </div>

    <div class="flex items-center gap-4">
      <!-- User Menu -->
      <div class="relative" data-controller="admin--dropdown">
        <button type="button"
                class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-muted transition-colors"
                data-action="click->admin--dropdown#toggle"
                data-admin--dropdown-target="trigger">
          <div class="w-8 h-8 rounded-full bg-primary/10 text-primary flex items-center justify-center shrink-0">
            <span class="text-xs font-semibold">
              <%= current_admin_user.first_name&.first&.upcase %><%= current_admin_user.last_name&.first&.upcase %>
            </span>
          </div>
          <div class="text-left">
            <div class="text-sm font-medium text-foreground">
              <%= [current_admin_user.first_name, current_admin_user.last_name].join(" ") %>
            </div>
            <div class="text-xs text-muted-foreground"><%= current_admin_user.role.humanize %></div>
          </div>
          <svg class="h-4 w-4 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
          </svg>
        </button>

        <!-- Dropdown Menu -->
        <div class="absolute right-0 mt-2 w-48 bg-card border border-border rounded-lg shadow-lg z-50 hidden"
             data-admin--dropdown-target="menu">
          <div class="py-1">
            <%= link_to edit_admin_admin_user_path(current_admin_user), class: "flex items-center gap-3 px-4 py-2 text-sm text-card-foreground hover:bg-muted transition-colors" do %>
              <%= admin_icon("user", class: "w-4 h-4") %>
              Profile
            <% end %>
            <%= button_to destroy_admin_user_session_path, method: :delete,
                          class: "flex items-center gap-3 w-full px-4 py-2 text-sm text-card-foreground hover:bg-muted transition-colors text-left" do %>
              <%= action_icon("logout", class: "w-4 h-4") %>
              Sign out
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Page content -->
  <main class="flex-1">
    <div class="p-8">
      <% if notice %>
        <div class="mb-6 rounded-lg bg-success/10 border border-success/20 p-4">
          <div class="flex items-center">
            <svg class="h-5 w-5 text-success mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <p class="text-sm font-medium text-success"><%= notice %></p>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="mb-6 rounded-lg bg-destructive/10 border border-destructive/20 p-4">
          <div class="flex items-center">
            <svg class="h-5 w-5 text-destructive mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <p class="text-sm font-medium text-destructive"><%= alert %></p>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </main>
</div>
</body>
</html>