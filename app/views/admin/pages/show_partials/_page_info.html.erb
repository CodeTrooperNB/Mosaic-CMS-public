<!-- Page Info -->
<div class="bg-card border border-border rounded-lg shadow-sm">
  <div class="border-b border-border px-6 py-6">
    <div class="flex items-start justify-between">
      <div class="min-w-0 flex-1">
        <div class="flex items-center gap-2 mb-2">
          <%= admin_icon("pages", class: "w-5 h-5 text-muted-foreground") %>
          <h1 class="text-xl font-bold text-card-foreground truncate"><%= @page.title %></h1>
        </div>

        <div class="flex items-center gap-4 text-sm">
          <code class="bg-muted px-2 py-1 rounded text-xs font-mono text-muted-foreground">/<%= @page.slug || @page.id %></code>
          <% if @page.published? %>
            <span class="badge-success">
              <%= status_icon("published", class: "w-3 h-3") %>
              Published
            </span>
          <% else %>
            <span class="badge-info">
              <%= status_icon("draft", class: "w-3 h-3") %>
              Draft
            </span>
          <% end %>
        </div>

        <% if @page.meta_description.present? %>
          <div class="mt-4 p-3 bg-primary/10 rounded-md">
            <h4 class="text-sm font-medium text-primary mb-1">SEO Description</h4>
            <p class="text-sm text-primary/80"><%= @page.meta_description %></p>
          </div>
        <% end %>

        <!-- Details Grid -->
        <div class="mt-4 grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">Slug</div>
            <div class="text-card-foreground"><%= @page.slug %></div>
          </div>
          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">Menu Title</div>
            <div class="text-card-foreground"><%= @page.menu_title.presence || "—" %></div>
          </div>

          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">Show in Menu</div>
            <% if @page.show_in_menu? %>
              <span class="badge-success">Yes</span>
            <% else %>
              <span class="badge-gray">No</span>
            <% end %>
          </div>
          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">Show in Footer</div>
            <% if @page.show_in_footer? %>
              <span class="badge-success">Yes</span>
            <% else %>
              <span class="badge-gray">No</span>
            <% end %>
          </div>

          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">Skip to First Child</div>
            <% if @page.skip_to_first_child? %>
              <span class="badge-warning">Enabled</span>
            <% else %>
              <span class="badge-gray">Disabled</span>
            <% end %>
          </div>
          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">View Template</div>
            <div class="text-card-foreground"><%= @page.view_template.present? ? @page.view_template.humanize : "Default" %></div>
          </div>

          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">Redirect Path</div>
            <% if @page.redirect_path.present? %>
              <code class="bg-muted px-2 py-1 rounded text-xs font-mono text-muted-foreground"><%= @page.redirect_path %></code>
            <% else %>
              <span class="text-muted-foreground">—</span>
            <% end %>
          </div>
          <div>
            <div class="text-xs font-medium uppercase text-muted-foreground">Published At</div>
            <div class="text-card-foreground"><%= @page.published_at ? l(@page.published_at, format: :short) : "—" %></div>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-2 ml-4">
        <%= link_to edit_admin_page_path(@page), class: "btn-secondary-sm" do %>
          <%= action_icon("edit", class: "w-4 h-4") %>
          Edit
        <% end %>
      </div>
    </div>
  </div>
</div>
