<% content_for :page_title, "Enquiry from #{@enquiry.name}" %>

<div class="space-y-6">
  <div class="bg-card border border-border rounded-lg shadow-sm">
    <div class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between border-b border-border px-6 py-4">
      <div>
        <h2 class="text-xl font-semibold text-card-foreground">Enquiry from <%= @enquiry.name %></h2>
        <div class="flex flex-wrap items-center gap-3 text-sm text-muted-foreground mt-2">
          <span>Received <%= time_ago_in_words(@enquiry.created_at) %> ago</span>
          <span>Status:
            <% case @enquiry.status %>
            <% when "pending" %>
              <strong class="text-warning">Pending</strong>
            <% when "read" %>
              <strong class="text-primary">Read</strong>
            <% when "resolved" %>
              <strong class="text-success">Resolved</strong>
            <% end %>
          </span>
        </div>
      </div>
      <div class="flex flex-wrap items-center gap-2">
        <%= link_to admin_enquiries_path, class: "p-2 rounded text-success hover:bg-success/10 transition-colors", title: "Back to list" do %>
          <%= action_icon("logout", class: "w-5 h-5") %>
        <% end %>
        <% if @enquiry.status_pending? || @enquiry.status_read? %>
          <%= button_to mark_as_resolved_admin_enquiry_path(@enquiry),
                        title: "Mark as resolved",
                        method: :patch,
                        class: "px-4 mx-1 cursor-pointer" do %>
            <%= action_icon("resolved", class: "w-5 h-5") %>
          <% end %>
        <% end %>
        <%= button_to mark_as_spam_admin_enquiry_path(@enquiry),
                      method: :patch,
                      data: { turbo_confirm: "Mark this enquiry as spam?" },
                      title: "Mark as Spam",
                      class: "p-2 rounded text-success hover:bg-success/10 transition-colors" do %>
          <%= action_icon("flag", class: "w-5 h-5") %>
        <% end %>
        <%= button_to admin_enquiry_path(@enquiry),
                      method: :delete,
                      title: "Delete",
                      data: { turbo_confirm: "Delete this enquiry?" },
                      class: "p-2 rounded text-success hover:bg-success/10 transition-colors" do %>
          <%= action_icon("delete", class: "w-5 h-5") %>
        <% end %>
      </div>
    </div>

    <div class="p-6 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
          <div>
            <div class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-2">Contact Information</div>
            <div class="bg-muted/40 border border-border rounded-lg p-4 space-y-3">
              <div>
                <div class="text-xs text-muted-foreground">Full Name</div>
                <div class="text-sm font-medium text-card-foreground"><%= @enquiry.name %></div>
              </div>
              <div>
                <div class="text-xs text-muted-foreground">Email Address</div>
                <div class="text-sm font-medium">
                  <a href="mailto:<%= @enquiry.email %>" class="text-primary hover:underline">
                    <%= @enquiry.email %>
                  </a>
                </div>
              </div>
              <% if @enquiry.phone.present? %>
                <div>
                  <div class="text-xs text-muted-foreground">Phone Number</div>
                  <div class="text-sm font-medium text-card-foreground">
                    <a href="tel:<%= @enquiry.phone %>" class="text-primary hover:underline">
                      <%= @enquiry.phone %>
                    </a>
                  </div>
                </div>
              <% end %>
              <% if @enquiry.company.present? %>
                <div>
                  <div class="text-xs text-muted-foreground">Company</div>
                  <div class="text-sm font-medium text-card-foreground"><%= @enquiry.company %></div>
                </div>
              <% end %>
            </div>
          </div>

          <div>
            <div class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-2">Enquiry Details</div>
            <div class="bg-muted/40 border border-border rounded-lg p-4 space-y-3">
              <div>
                <div class="text-xs text-muted-foreground">Received</div>
                <div class="text-sm font-medium text-card-foreground">
                  <%= @enquiry.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
              </div>
              <div>
                <div class="text-xs text-muted-foreground">Status</div>
                <div class="text-sm font-medium">
                  <% case @enquiry.status %>
                  <% when "pending" %>
                    <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium rounded-full bg-warning/10 text-warning">
                      Pending
                    </span>
                  <% when "read" %>
                    <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                      Read
                    </span>
                  <% when "resolved" %>
                    <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium rounded-full bg-success/10 text-success">
                      Resolved
                    </span>
                  <% end %>
                </div>
              </div>
              <% if @enquiry.spam %>
                <div>
                  <div class="text-xs text-muted-foreground">Spam Flag</div>
                  <div class="text-sm font-medium">
                    <span class="inline-flex items-center gap-1 px-2 py-1 text-xs font-medium rounded-full bg-destructive/10 text-destructive">
                      Marked as Spam
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <% if @enquiry.subject.present? %>
            <div>
              <div class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-2">Subject</div>
              <div class="bg-muted/40 border border-border rounded-lg p-4">
                <p class="text-sm text-card-foreground"><%= @enquiry.subject %></p>
              </div>
            </div>
          <% end %>

          <div>
            <div class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-2">Message</div>
            <div class="bg-muted/40 border border-border rounded-lg p-4">
              <p class="text-sm text-card-foreground whitespace-pre-wrap"><%= @enquiry.message %></p>
            </div>
          </div>

          <% if @enquiry.form_data.present? && @enquiry.form_data.keys.any? { |k| !%w[message subject phone company].include?(k) } %>
            <div>
              <div class="text-xs font-semibold text-muted-foreground uppercase tracking-wide mb-2">Additional Information</div>
              <div class="bg-muted/40 border border-border rounded-lg p-4 space-y-3">
                <% @enquiry.form_data.except("message", "subject", "phone", "company").each do |key, value| %>
                  <div>
                    <div class="text-xs text-muted-foreground"><%= key.to_s.titleize %></div>
                    <div class="text-sm font-medium text-card-foreground"><%= value %></div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
