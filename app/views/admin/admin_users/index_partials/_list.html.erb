<% if @admin_users.any? %>
  <div class="space-y-3">
    <% @admin_users.each do |user| %>
      <div class="flex items-center justify-between p-4 border border-border rounded-md bg-muted hover:bg-muted/80 transition-colors group">
        <!-- Left: Avatar + Name/Email -->
        <div class="flex items-center gap-4 min-w-0 flex-1">
          <div class="w-10 h-10 rounded-full bg-primary/10 text-primary flex items-center justify-center shrink-0">
            <span class="text-sm font-semibold">
              <%= user.first_name&.first&.upcase %><%= user.last_name&.first&.upcase %>
            </span>
          </div>
          <div class="min-w-0 flex-1">
            <div class="font-medium text-card-foreground truncate">
              <%= [user.first_name, user.last_name].join(" ") %>
            </div>
            <div class="text-sm text-muted-foreground truncate"><%= user.email %></div>
          </div>
        </div>

        <!-- Right: Role at end, actions underneath -->
        <div class="flex flex-col items-end gap-2 ml-4 shrink-0">
          <div>
            <% if user.admin? %>
              <span class="badge-info">
                <%= status_icon("admin", class: "w-3 h-3") %>
                Admin
              </span>
            <% else %>
              <span class="badge-info">
                <%= status_icon("editor", class: "w-3 h-3") %>
                Editor
              </span>
            <% end %>
          </div>
          <div class="flex items-center gap-1">
            <%= link_to edit_admin_admin_user_path(user),
                        class: "p-1.5 text-muted-foreground hover:text-primary hover:bg-primary/10 rounded transition-colors",
                        title: "Edit user" do %>
              <%= action_icon("edit", class: "w-4 h-4") %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-12">
    <%= admin_icon("users", class: "w-12 h-12 text-muted-foreground mx-auto mb-4") %>
    <h3 class="text-lg font-medium text-card-foreground mb-2">No admin users yet</h3>
    <p class="text-muted-foreground mb-4">Get started by adding your first admin user.</p>
    <%= link_to new_admin_admin_user_path, class: "btn-primary" do %>
      <%= action_icon("create", class: "w-4 h-4") %>
      Create Admin User
    <% end %>
  </div>
<% end %>
